{
  "name": "browser2video",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.29.3",
  "scripts": {
    "dev": "pnpm -C apps/demo dev",
    "build": "pnpm -r --filter '!browser2video-website' build",
    "build:all": "pnpm -r build",
    "preview": "pnpm -C apps/demo preview",
    "b2v": "tsx packages/cli/src/cli.ts",
    "e2e:human": "pnpm b2v run --scenario basic-ui --mode human --record screencast --headed",
    "e2e:fast": "pnpm b2v run --scenario basic-ui --mode fast --record none",
    "e2e:collab:human": "pnpm b2v run --scenario collab --mode human --record screen --headed --display-size 2560x720",
    "e2e:github:human": "pnpm b2v run --scenario github --mode human --record screencast --headed",
    "e2e:kanban": "bash scripts/run-kanban.sh",
    "e2e:collab:auto": "bash scripts/run-collab-auto.sh",
    "e2e:collab:docker": "bash scripts/run-collab-docker.sh",
    "demo": "pnpm -C apps/demo dev",
    "test:e2e": "pnpm build && npx playwright test",
    "test:e2e:ui": "pnpm build && npx playwright test --ui"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.0",
    "@types/node": "^22.0.0",
    "tsx": "^4.19.0",
    "typescript": "~5.7.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "node-pty",
      "playwright",
      "@ffmpeg-installer/darwin-arm64",
      "@ffmpeg-installer/linux-x64",
      "@ffmpeg-installer/linux-arm64"
    ]
  }
}
