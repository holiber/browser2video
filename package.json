{
  "name": "browser2video-root",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.29.3",
  "scripts": {
    "dev": "pnpm -C apps/demo dev",
    "dev:terminals": "node packages/browser2video/terminal-ws-server.ts",
    "dev:full": "pnpm dev:terminals & pnpm dev",
    "typecheck": "pnpm -r --filter '!browser2video-website' typecheck",
    "preview": "pnpm -C apps/demo preview",
    "demo": "pnpm -C apps/demo dev",
    "test": "test-runner scenario --allow-missing-project",
    "test:unit": "test-runner unit",
    "test:e2e": "test-runner e2e --allow-missing-project",
    "test:scenario": "test-runner scenario --allow-missing-project",
    "test:smoke": "test-runner scenario --smoke --allow-missing-project",
    "test:ui": "npx playwright test --ui",
    "pw:ui": "pnpm exec playwright test --ui",
    "pw:trace": "pnpm exec playwright show-trace",
    "run:basic-ui": "node tests/scenarios/basic-ui.test.ts",
    "run:collab": "node tests/scenarios/collab.test.ts",
    "run:kanban": "node tests/scenarios/kanban.test.ts",
    "run:github-mobile": "node tests/scenarios/github-mobile.test.ts",
    "run:tui-terminals": "node tests/scenarios/tui-terminals.test.ts",
    "run:console-logs": "node tests/scenarios/console-logs.test.ts",
    "gen:docs": "node scripts/gen-docs.ts",
    "gen:video-page": "node scripts/gen-video-page.ts",
    "player": "pnpm -C apps/player dev"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.0",
    "@types/node": "^22.0.0",
    "typescript": "~5.7.0",
    "test-runner": "file:packages/test-runner"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "electron",
      "jabterm",
      "node-pty",
      "playwright",
      "@ffmpeg-installer/darwin-arm64",
      "@ffmpeg-installer/linux-x64",
      "@ffmpeg-installer/linux-arm64"
    ]
  }
}